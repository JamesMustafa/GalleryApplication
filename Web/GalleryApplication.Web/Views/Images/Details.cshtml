@model GalleryApplication.Services.Models.Arts.ArtDetailsViewModel
@{
    ViewData["Title"] = "Index";
    var path = @"/images/arts/" + Model.Id.ToString() + Model.Path;
}
<div class="row">
    <!-- Post Content Column -->
    <div class="col-lg-8">

        <!-- Title -->
        <h1 class="mt-4">@Model.Title</h1>

        <!-- Author -->
        <p class="lead">
            by
            <a asp-action="Details" asp-controller="Authors" asp-route-id="@Model.ArtistId">@Model.ArtistName</a>
        </p>

        <hr>

        <!-- Date/Time -->
        <p>Posted on @Model.UploadedOn.DayOfWeek, @Model.UploadedOn.ToLocalTime()</p>

        <hr>

        <!-- Preview Image -->
        <img class="img-fluid rounded" src="@path" alt="">

        <hr>

        <!-- Post Content -->
        <p class="lead">@Model.Description</p>
    </div>
    <!-- Sidebar Widgets Column -->
    <div class="col-md-4">

        <!-- Categories Widget -->
        <div class="card my-4">
            <h5 class="card-header">Categories</h5>
            <div class="card-body">
                <div class="row">
                    @Model.CategoryName
                </div>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-action="Details" asp-controller="Category" asp-route-id="@Model.CategoryId">Find Out More!</a>
            </div>
        </div>

        <!-- Side Widget -->
        <div class="card my-4">
            <h5 class="card-header">Author</h5>
            <div class="card-body">
            @Model.ArtistName
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-action="Details" asp-controller="Authors" asp-route-id="@Model.ArtistId">Find Out More!</a>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Back to Index</a>
</div>
