@model GalleryApplication.Services.Models.Artists.ArtistDetailsViewModel
@{
    ViewData["Title"] = "Index";
    var path = @"../../images/artists/" + Model.Name.Replace(" ", string.Empty).ToLower() + ".jpeg";
}
<header class="jumbotron my-4">
    <div class="row">
        <div class="col-sm-4">
            <img class="img-fluid rounded" src="@path" alt="">
        </div>
        <div class="col-sm-8">
            <h2 class="display-3">@Model.Name</h2>
            <p class="lead">@Model.ShortBiography</p>
        </div>
    </div>
</header>
<!-- Post Content Column -->
<!--Quotes Part Here-->
@if(Model.Quotes.Count() >= 1)
{
<div id="carouselExampleControls" class="carousel slide d-none d-sm-block mt-4" data-ride="carousel">
    <div class="carousel-inner">
        @foreach (var quote in Model.Quotes)
        {
            if (quote.Id == 1)
            {
                <div class="carousel-item active">
                    <img src="../../images/quotes1.png" class="d-inline w-100" alt="...">
                    <div class="carousel-caption d-none d-sm-block text-dark">
                        <h5>@quote.Content</h5>
                        <p>@quote.ArtistName</p>
                    </div>
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <img src="../../images/quotes1.png" class="d-inline w-100" alt="...">
                    <div class="carousel-caption d-none d-sm-block text-dark">
                        <h5>@quote.Content</h5>
                        <p>@quote.ArtistName</p>
                    </div>
                </div>
            }
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
}
<div class="row text-center">
    @foreach (var art in Model.Arts)
    {
        var artPath = @"/images/arts/" + art.Id.ToString() + art.Path;
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card h-100">
                <img class="card-img-top" src="@artPath" alt="">
                <div class="card-body">
                    <h4 class="card-title">@art.Title</h4>
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary" asp-action="Details" asp-controller="Images" asp-route-id="@art.Id">Find Out More!</a>
                </div>
            </div>
        </div>
    }
</div>
<div>
    <a asp-action="Index" asp-controller="Home">Back to Index</a>
</div>
